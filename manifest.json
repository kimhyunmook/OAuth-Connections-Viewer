{
  "manifest_version": 3,
  "name": "OAuth Connections Viewer",
  "version": "1.0.1",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://myaccount.google.com/connections*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://myaccount.google.com/connections*"],
      "js": ["content-script.js"]
    }
  ]
}
