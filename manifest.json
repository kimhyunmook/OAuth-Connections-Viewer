{
  "manifest_version": 3,
  "name": "OAuth Connections Viewer",
  "version": "1.0.0",
  "description": "여러 플랫폼의 OAuth 연결을 한 눈에 확인할 수 있는 확장 프로그램입니다.",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "privacy_policy": "https://kimhyunmook.github.io/oauth-policy",
  "host_permissions": [
    "https://myaccount.google.com/connections*",
    "https://nid.naver.com/internalToken/view/tokenList/pc/ko*",
    "https://apps.kakao.com/connected/app/list*",
    "https://accounts.kakao.com/login*",
    "https://nid.naver.com/nidlogin.login*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://myaccount.google.com/connections*",
        "https://nid.naver.com/internalToken/view/tokenList/pc/ko*",
        "https://apps.kakao.com/connected/app/list*",
        "https://accounts.kakao.com/login*",
        "https://nid.naver.com/nidlogin.login*"
      ],
      "js": ["content-script.js"]
    }
  ]
}
